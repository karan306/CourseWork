X=zeros(92*112,240);
for i=1:40
    for j= 1:6
        A=imread(strcat('/home/karan/Desktop/5th Sem/CS663/assignment4/att_faces/s',num2str(i),'/',num2str(j),'.pgm'));
        [r,c]=size(A);
        B=reshape(A,[r*c,1]);
        X(:,6*(i-1)+j)=B(:,1);
    end
end
M=mean(X,2);

for i=1:240
    M=mean(X(:,i));
    X(:,i)=X(:,i)-M;
end

L=X'*X;
[W,E]=eig(L);
% [w,E]=sortem(W,E);
V=X*W;
S=sum((V).^2).^0.5;
S=repmat(S,10304,1);
V=V./S;

% V=normc(V);
k_orl=[1, 2, 3, 5, 10, 15, 20, 30, 50, 75, 100, 150, 170];
[h,s_orl]=size(k_orl);
rec_rate_orl=zeros(1,s_orl);
k_yale=[1, 2, 3, 5, 10, 15, 20, 30, 50, 60, 65, 75, 100, 200, 300, 500, 1000];
[k,s_yale]=size(k_yale);
for l=1:s_orl
    k=k_orl(1,l)
    A=(V(:,(241-k):240))'*X;
    
    for i=1:40
        for j=7:10
            B=imread(strcat('/home/karan/Desktop/5th Sem/CS663/assignment4/att_faces/s',num2str(i),'/',num2str(j),'.pgm'));
            [r,c]=size(B);
            B=reshape(B,[r*c,1]);
            M=mean(B);
            B=B-M;
            B=double(B);
            B=(V(:,(241-k):240))'*B;
            m=9999999999999879;
            index=1;
            for h=1:240
                D=B-A(:,h);
                D=D.^2;
                if m>sum(sum(D))
                    m=sum(sum(D));
                    index=h;
                end
            end
            if ceil(index/6)==i
                rec_rate_orl(1,l)=rec_rate_orl(1,l)+1;
            end
        end
    end
end

Q=zeros(1,240);
for i=1:240
    Q(1,i)=E(i,i);
end
Q